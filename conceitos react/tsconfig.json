{
  "compilerOptions": {

    "lib": ["dom", "dom.iterable", "esnext"],                                        
    "jsx": "react-jsx",                               
    "moduleResolution": "node",                       
    "resolveJsonModule": true,                      
    "allowJs": true,                                  
    "noEmit": true,                                   
    "isolatedModules": true,                         
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "strict": true,                                      
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true                                
  },
  "include": ["src"]
}
